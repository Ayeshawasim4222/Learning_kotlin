fun main() {
    println("Welcome, time for some quick math! âœ¨")
    println("Please enter any two numbers of your choice.")

    print("Enter first number: ")
    var number1 = readLine()!!.toDouble()

    print("Enter second number: ")
    var number2 = readLine()!!.toDouble()

    println("What would you like to do?")
    println("Type + for Addition â•")
    println("Type - for Subtraction â–")
    println("Type * for Multiplication âœ–ï¸")
    println("Type / for Division â—")

    print("Enter your choice: ")
    val operation = readLine()

    var result = 0.0
    var emoji = ""

    when (operation) {
        "+" -> {
            result = number1 + number2
            emoji = "âœ…"
        }
        "-" -> {
            result = number1 - number2
            emoji = "ğŸ“‰"
        }
        "*" -> {
            result = number1 * number2
            emoji = "âœ¨"
        }
        "/" -> {
            if (number2 != 0.0) {
                result = number1 / number2
                emoji = "ğŸ”—"
            } else {
                println("âŒ Error: Cannot divide by zero.")
                return
            }
        }
        else -> {
            println("âŒ Invalid operation. Please choose +, -, * or /")
            return
        }
    }

    println("Result of $number1 $operation $number2 is: $result $emoji")
}
